<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wp45992"
    tools:context=".Espace_Adh_psActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                card_view:cardBackgroundColor="#2FFCF9F9"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="6dp"
                card_view:cardMaxElevation="2dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/logo" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_espace_adherent"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#40FCF9F9"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_adherent"
                        app:civ_border_color="#FDFBFB"
                        app:civ_border_width="1dp"
                         android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/txt_espace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="18dp"
                        android:text="Espace AdhÃ©rent"
                        android:layout_centerInParent="true"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/light_font"
                        android:shadowColor="@color/text_shadow"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:layout_toRightOf="@+id/profile_image"
                        android:layout_toLeftOf="@+id/ic_arrow"
                        />


                    <ImageView
                        android:id="@+id/ic_arrow"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp">


                    </ImageView>


                </RelativeLayout>




                <!--      <FrameLayout
                          android:id="@+id/frm_pos"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/card_edge">

                      </FrameLayout>-->


            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:id="@+id/btn_espace_ps"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="#40FCF9F9"
                app:cardCornerRadius="5dp"
                app:cardElevation="2dp"
                app:cardMaxElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_ps"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_ps"
                        app:civ_border_color="#FDFBFB"
                        app:civ_border_width="1dp"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/txt_espace_ps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="18dp"
                        android:text="Espace Professionnel"
                        android:layout_centerInParent="true"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/light_font"
                        android:shadowColor="@color/text_shadow"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="2"
                        android:layout_toRightOf="@+id/profile_image_ps"
                        android:layout_toLeftOf="@+id/ic_arrow_ps"
                        />


                    <ImageView
                        android:id="@+id/ic_arrow_ps"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp">


                    </ImageView>


                </RelativeLayout>




                <!--      <FrameLayout
                          android:id="@+id/frm_pos"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/card_edge">

                      </FrameLayout>-->


            </androidx.cardview.widget.CardView>







        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center">


            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/logo"
                android:layout_centerInParent="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/licence"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"/>

        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>